# Form step order configuration
# Format: comma-separated list of step IDs
# Available step IDs: userInfo,projectType,showerIssues,waterHeater,plumbingCondition,existingBathtub,zipCode
NEXT_PUBLIC_FORM_STEP_ORDER=projectType,showerIssues,waterHeater,plumbingCondition,existingBathtub,zipCode,userInfo

# Form submission behavior
# Reset timeout in milliseconds (default: 10000 = 10 seconds)
NEXT_PUBLIC_FORM_RESET_TIMEOUT=10000
# Enable automatic reset after submission (true/false)
NEXT_PUBLIC_FORM_AUTO_RESET_ENABLED=false

# Database Configuration - Replace with your database details
# Connection using Supabase Pooler
DATABASE_URL="postgresql://postgres.yourproject:yourpassword@aws-0-your-region.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection (for migrations)
DIRECT_URL="postgresql://postgres.yourproject:yourpassword@aws-0-your-region.pooler.supabase.com:5432/postgres"

# Supabase Configuration (if using Supabase client directly)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
